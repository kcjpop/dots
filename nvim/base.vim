let mapleader=" "

set hidden

" colorscheme
colorscheme gruvbox
set background=dark
set termguicolors

" translate tabs to spaces
" set tabwidth = 2 spaces
set expandtab
set tabstop=2
set shiftwidth=2

" better splitting behavior
set splitbelow
set splitright

" use ripgrep
set grepprg=rg\ --vimgrep
set grepformat^=%f:%l:%c:%m
set completeopt=noinsert,menuone,noselect

" enable line numbers
set number

" enable mouse
set mouse=a

